<div class="container">
<script src="<%= asset_path 'find.js'%>"></script>
<div style="display:none;">
  <div id="coordx"><%= @coordx %></div>
  <div id="coordy"><%= @coordy %></div>
  <div id="specialty_id"><%= @specialty_id %></div>
</div>
<div class="row">
	<div class="col-sm-5">
	<div class="przesuwak">
	<input id="distanceSlider" type="range" name="distance" min="1" max="50" value="5">
	<div id="maxDistance">5 km</div>
	</div>
	<ul id="lista">
	</ul>
	</div>
	<div class="col-sm-7">
	<div id="specialistID" style="display:none;"></div>
	<div id="specialistDetails" style="display:none;">
	  <div id="map" style="width:500px;height:500px;max-width:100%; max-height:100%;"></div>
	  <div class="box-trasa row">
	  <div class="col-sm-6">
	  <button id="drawRoute">Wyznacz trasÄ™ do lokalizacji specjalisty</button>
	  </div>
	  <div id="transitOptions" class="col-sm-6">
		<div id="transitDriving" class="transitOption active"><i class="fas fa-car-alt"></i></div>
		<div id="transitWalking" class="transitOption"><i class="fas fa-shoe-prints"></i></div>
	  </div>
	  <div id="timeOfTransit"></div>
	  </div>
	  <% if user_signed_in? %>
	  <div id="currentUserID" style="display: none;"><%= current_user.id %></div>
	  <div id="giveReview" class="przycisnik"></div>
	  <div id="reviews"></div>
	  <% end %>
	</div>
	</div>
</div>
</div>
